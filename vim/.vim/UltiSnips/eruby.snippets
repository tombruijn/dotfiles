# eruby

extends html

snippet % "<% {code} %>" i
<% ${1:code} %>$0
endsnippet

snippet = "<%= {code} %>" i
<%= ${1:code} %>$0
endsnippet

snippet if "<% if {condition} %>{code}<% end %>"
<% if ${1:condition} %>
  ${0:${VISUAL:code}}
<% end %>
endsnippet

snippet else "<% else %>"
<% else %>
  ${0:${VISUAL:code}}
endsnippet

snippet elsif "<% elsif {condition} %>"
<% elsif ${1:condition} %>
  ${0:${VISUAL:code}}
endsnippet

snippet each "<% variable.each do |variable| %>"
<% ${1:variable}.each do |${2:variable}| %>
  ${0:${VISUAL:code}}
<% end %>
endsnippet

snippet render "<%= render partial %>"
<%= render "${1:partial}" %>$0
endsnippet

snippet pry "<% binding.pry %>"
<% require "pry"; binding.pry %>$0
endsnippet

snippet deb "<% debugger %>"
<% require "debug"; debugger %>$0
endsnippet

# vim:ft=snippets:
